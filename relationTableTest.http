@protocol= http
@domainname= localhost
@port= {{$dotenv PORT}}
@path=v1
@baseUrl = {{protocol}}://{{domainname}}:{{port}}/{{path}}


# ARTICLE_HAS_CATEGORY
### GET
GET {{baseUrl}}/category/article


# category/:id/article
###
GET {{baseUrl}}/category/1/article

# category/:id/article
###
GET {{baseUrl}}/category/1/article?limit=3

### POST
POST {{baseUrl}}/category/article
Content-Type: application/json

{
    "article_id": 7,
    "category_id": 1
}


### GET
GET {{baseUrl}}/article-has-size

# size /:id/article
###
GET {{baseUrl}}/article-has-size/4

### POST
POST {{baseUrl}}/article-has-size
Content-Type: application/json

{
    "article_id": 2,
    "size_name": "L",
    "stock": 12
}

# ORDER_HAS_ARTICLE
### GET order/article
GET {{baseUrl}}/order/article

# order/:id/article
###
GET {{baseUrl}}/order/1/article

